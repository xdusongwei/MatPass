<Window x:Class="MatPassword.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Loaded="Window_Loaded_1">
    <DockPanel>
        <StackPanel DockPanel.Dock="Left">
            <Button Content="refresh" Width="100" Height="32" Click="Button_Click_1"/>
        </StackPanel>
        <Grid DockPanel.Dock="Right">
            <ListBox x:Name="lstMat" Height="320" Width="320" HorizontalContentAlignment="Stretch"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled" Background="{x:Null}" BorderBrush="{x:Null}">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="4"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Border Background="{Binding Back}" Height="80" Width="80">
                                <Image Source="{Binding Img}" Margin="8" OpacityMask="White"/>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </DockPanel>
</Window>
